{
  "publisher": "Nico HÃ¼lscher",
  "name": "tolgee",
  "displayName": "Tolgee",
  "version": "0.1.0",
  "description": "Get autocompletion and inline preview for your tolgee projects",
  "repository": {
    "type": "git",
    "url": "https://github.com/eweren/vscode-tolgee.git"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "icon": "tolgeeLogo.png",
  "engines": {
    "vscode": "^1.67.0"
  },
  "activationEvents": [
    "onLanguage:tsx",
    "onLanguage:ts",
    "onLanguage:jsx",
    "onLanguage:js",
    "onLanguage:svelte",
    "onLanguage:html",
    "onDidChangeTextDocument"
  ],
  "contributes": {
    "commands": [
      {
        "command": "tolgee.changeLanguage",
        "title": "Tolgee: Change language"
      }
    ],
    "configuration": {
      "title": "Tolgee",
      "properties": {
        "tolgee.language": {
          "type": "string",
          "default": "en",
          "description": "The language to use for the tolgee value preview."
        },
        "tolgee.configPath": {
          "type": "string",
          "default": ".tolgeerc",
          "description": "The path to the tolgee config file."
        },
        "tolgee.highlightColor": {
          "type": "string",
          "default": "#ec417a",
          "description": "The color to be used to highlight tolgee keys."
        },
        "tolgee.filePattern": {
          "type": "string",
          "default": "**/*.{tsx,jsx,js,ts,svelte,html}",
          "description": "The pattern in which the extension should search for tolgee keys."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "update": "vscode-ext-gen --output src/generated/meta.ts",
    "test": "env TS_NODE_COMPILER_OPTIONS='{\"module\": \"commonjs\" }' mocha -r ts-node/register 'src/test/**/*.ts'"
  },
  "peerDependencies": {
    "eslint": "^9.10.0"
  },
  "dependencies": {
    "@tolgee/cli": "^2.4.1",
    "@tolgee/core": "^5.33.1",
    "@tolgee/format-icu": "^5.33.1",
    "cosmiconfig": "^9.0.0",
    "jsonschema": "^1.4.1",
    "vscode-ext-gen": "^0.5.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/chai": "^5.0.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.122",
    "@types/vscode": "^1.96.0",
    "@typescript-eslint/eslint-plugin": "^8.18.0",
    "@typescript-eslint/parser": "^8.18.0",
    "@vscode/test-electron": "^2.4.1",
    "chai": "^5.1.2",
    "eslint": "^8.57.1",
    "glob": "^11.0.0",
    "mocha": "^10.0.0",
    "reactive-vscode": "^0.2.9",
    "ts-node": "^10.8.1",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.0"
  }
}